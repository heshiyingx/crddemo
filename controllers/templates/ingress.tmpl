apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{.ObjectMeta.Name}}
  namespace: {{.Spec.NameSpace}}
spec:
  ingressClassName: nginx
  rules:
    - host: {{.Spec.Expose.IngressDomain}}
      http:
        paths:
          - path: {{.Spec.Expose.Path}}
            pathType: Prefix
            backend:
              service:
                name: {{.ObjectMeta.Name}}
                port:
                  number: {{.Spec.Port}}